<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_create_profile"
    app:startDestination="@id/createProfileName">

    <fragment
        android:id="@+id/createProfileName"
        android:name="com.example.hotspot.view.createProfile.CreateProfileName"
        android:label="create_profile_name_fragment"
        tools:layout="@layout/create_profile_name_fragment" >
        <action
            android:id="@+id/action_createProfileName_to_createProfileAgeFragment"
            app:destination="@id/createProfileAgeFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/createProfileAgeFragment"
        android:name="com.example.hotspot.view.createProfile.CreateProfileAgeFragment"
        android:label="create_profile_age_fragment"
        tools:layout="@layout/create_profile_age_fragment" >
        <action
            android:id="@+id/action_createProfileAgeFragment_to_createProfileGenderFragment"
            app:destination="@id/createProfileGenderFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/createProfileGenderFragment"
        android:name="com.example.hotspot.view.createProfile.CreateProfileGenderFragment"
        android:label="create_profile_gender_fragment"
        tools:layout="@layout/create_profile_gender_fragment" >
        <action
            android:id="@+id/action_createProfileGenderFragment_to_createProfileUploadImageFragment"
            app:destination="@id/createProfileUploadImageFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/createProfileUploadImageFragment"
        android:name="com.example.hotspot.view.createProfile.CreateProfileUploadImageFragment"
        android:label="fragment_create_profile_upload_image"
        tools:layout="@layout/fragment_create_profile_upload_image" />
</navigation>