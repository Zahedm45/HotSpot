<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageOverview"
    android:id="@+id/fragment_message">

    <!-- TODO: Update blank fragment layout -->


    <androidx.cardview.widget.CardView
        android:id="@+id/chatOnClick"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        app:cardCornerRadius="50dp">

        <TextView
            android:id="@+id/messageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="30dp"
            android:text="Ikke sÃ¥ meget, dig?" />

        <TextView
            android:id="@+id/message_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="0dp"
            android:text="27/09" />

        <TextView
            android:id="@+id/chat_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Clara"
            android:textColor="#000000"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:src="@mipmap/ic_profile" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Beskeder"
        android:textAlignment="center"
        android:textColor="#59000000"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="57dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_menu_icon" />

    <com.gigamole.navigationtabstrip.NavigationTabStrip

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        app:nts_active_color="#673AB7"
        app:nts_animation_duration="300"
        app:nts_color="#D9673AB7"
        app:nts_corners_radius="50dp"
        app:nts_factor="2.5"
        app:nts_gravity="top"
        app:nts_inactive_color="#c4c4c4"
        app:nts_size="15sp"
        app:nts_titles="@array/titles"
        app:nts_type="line"
        app:nts_typeface="fonts/typeface.otf"
        app:nts_weight="5dp" />



</FrameLayout>
