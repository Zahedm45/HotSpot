<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"
    android:background="#00000000"
    android:id="@+id/snackbar_myhotspot_container"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/snackbar_myhotspot_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:elevation="4dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="#f7f7f7"
        app:cardCornerRadius="16dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginStart="4dp"
                    android:text="You are checked in"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"/>


            <!--this view separates between button and the message-->


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gotoWebsiteButton"
                android:paddingEnd="5dp"
                android:paddingStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins_light"
                android:text="My hotspot"
                android:textColor="#f7f7f7"
                android:textSize="11sp"
                android:background="@drawable/custom_button_no_shadow"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"/>
            </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>