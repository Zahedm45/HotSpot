<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".view.AfterCheckIn"
        >




        <ImageButton
            android:id="@+id/after_check_in_party_img"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/dancing_pic"
            app:layout_constraintVertical_bias=".0"

            app:layout_constraintBottom_toTopOf="@+id/after_check_in_hot_spot_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="SpeakableTextPresentCheck" />





        <TextView
            android:id="@+id/after_check_in_hot_spot_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/locationName"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="1dp"
            android:padding="10dp"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/after_check_in_party_img"
            app:layout_constraintBottom_toTopOf="@+id/after_check_in_checked_in"
            />


        <TextView
            android:id="@+id/after_check_in_checked_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:lineSpacingExtra="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingStart="48dp"
            android:paddingEnd="10dp"
            android:paddingTop="7dp"
            android:text="Text view"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/after_check_in_hot_spot_name" />


        <ImageView
            android:id="@+id/after_check_in_person"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/persons2"
            app:layout_constraintBottom_toBottomOf="@+id/after_check_in_checked_in"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/after_check_in_checked_in" />


        <Button
            android:id="@+id/after_check_in_checked_in_btn"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="156dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/light_gold"
            android:clickable="false"
            android:text="@string/checkedIn"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            app:cornerRadius="28dp"
            android:layout_marginTop="10dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/after_check_in_checked_in"
            tools:ignore="TouchTargetSizeCheck"
            tools:layout_editor_absoluteX="255dp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="60dp"
            android:layout_height="60dp"

            app:layout_constraintBottom_toBottomOf="@+id/after_check_in_checked_in"
            app:layout_constraintEnd_toEndOf="parent">







        </androidx.constraintlayout.widget.ConstraintLayout>







    </androidx.constraintlayout.widget.ConstraintLayout>






</ScrollView>






