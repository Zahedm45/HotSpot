        <com.google.android.material.chip.Chip
            android:id="@+id/chip13"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chip_text"
            app:layout_constraintEnd_toEndOf="@+id/after_check_in_checked_in"
            app:layout_constraintHorizontal_bias="0.277"
            app:layout_constraintStart_toEndOf="@+id/after_check_in_person"
            app:layout_constraintTop_toTopOf="@+id/after_check_in_checked_in" />


        <com.google.android.material.chip.Chip
            android:id="@+id/chip133"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chip_text"
            app:layout_constraintEnd_toEndOf="@+id/after_check_in_checked_in"
            app:layout_constraintHorizontal_bias="0.669"
            app:layout_constraintStart_toEndOf="@+id/after_check_in_person"
            app:layout_constraintTop_toTopOf="@+id/after_check_in_checked_in" />


