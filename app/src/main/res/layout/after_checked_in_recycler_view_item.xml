<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_favorites"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:elevation="100dp"
    app:cardCornerRadius="40dp"
    app:cardElevation="0dp"
    >


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/button_effect"


        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/after_checked_in_person_item_user_pic"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1.8dp"
            android:layout_gravity="center"
            android:elevation="20dp"
            android:src="@drawable/round_profile_pic" />


        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/after_checked_in_person_item_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="14dp"
                android:text="Hotspot name"
                android:textColor="@color/black"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/after_checked_in_person_item_user_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Age: 22" />


                <TextView
                    android:id="@+id/after_checked_in_person_item_user_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Gender: Men" />


                <TextView
                    android:id="@+id/after_checked_in_person_item_user_seeking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Interested: Yes" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

