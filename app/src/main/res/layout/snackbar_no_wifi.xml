<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"
    android:background="#00000000"
    android:id="@+id/snackbar_container">

    <androidx.cardview.widget.CardView
        android:id="@+id/snackbar_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <ImageView
                android:paddingEnd="12dp"
                android:paddingStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:src="@drawable/vector_no_wifi" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:layout_marginStart="4dp"
                android:text="Error connecting to Internet."
                android:textColor="@android:color/white"
                android:textSize="16sp" />
            </LinearLayout>

            <!--this view separates between button and the message-->


            <ImageView
                android:id="@+id/gotoWebsiteButton"
                android:paddingEnd="5dp"
                android:paddingStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/vector_error" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>