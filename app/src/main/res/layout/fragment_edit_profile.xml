<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".view.CreateProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_80tinted"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/edit_profil"
                android:textColor="@color/orange"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:text="@string/edit_profil"></TextView>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="Tilføj ændringer"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"

                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:text="Tilføj ændringer"></TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_profile_new_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="username"
                android:background="@drawable/edittext_background1"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:hint="@string/username"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:text="Nyt brugernavn" />

            <EditText
                android:id="@+id/edit_profile_new_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/edittext_background1"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:hint="@string/e_mail"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:text="Ny email" />

            <EditText
                android:id="@+id/edit_profile_BioText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/edittext_background1"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:hint="@string/bio_text"
                android:inputType="textMultiLine|number|text"
                android:minHeight="70dp"
                android:text="Statusbesked" />

            <EditText
                android:id="@+id/edit_profile_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="password"
                android:background="@drawable/edittext_background1"
                android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:paddingEnd="10dp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/repeatTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="password"
                android:background="@drawable/edittext_background1"
                android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:hint="@string/repeat_password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:paddingEnd="10dp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/edit_profile_saveChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:width="200dp"
                android:backgroundTint="@color/orange"
                android:text="@string/edit_profil"
                tools:text="Godkend Ændring" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>