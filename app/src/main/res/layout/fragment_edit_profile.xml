<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProfile"
    android:padding="20dp"
    android:background="@drawable/shutterstock"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@color/white_80tinted">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profil"
                    android:textColor="@color/orange"
                    android:textSize="30dp"
                    tools:text="Ændre profil"></TextView>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profil"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="17sp"
                    tools:text="Ændre neden under på det du ønsker at skifte"></TextView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_for_profile_picture" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="username"
                android:background="@drawable/edittext_background1"
                android:ems="10"
                android:hint="@string/username"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:text="Nyt Brugernavn" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/edittext_background1"
                android:ems="10"
                android:hint="@string/e_mail"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:text="Ny Email" />

            <EditText
                android:id="@+id/editBioText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/edittext_background1"
                android:ems="10"
                android:hint="@string/bio_text"
                android:inputType="textMultiLine|number|text"
                android:minHeight="70dp"
                android:text="Bio tekst" />

            <EditText
                android:id="@+id/CreateTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="password"
                android:background="@drawable/edittext_background1"
                android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:paddingEnd="10dp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/repeatTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="password"
                android:background="@drawable/edittext_background1"
                android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
                android:ems="10"
                android:hint="@string/repeat_password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:paddingEnd="10dp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:width="200dp"
                android:backgroundTint="@color/orange"
                android:text="@string/edit_profil"
                tools:text="Godkend Ændring" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>